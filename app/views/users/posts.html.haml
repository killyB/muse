#posts
	- @posts.each do |post|
		.post
			.post_image
				- if post.image.present?
					= link_to (image_tag post.image.url(:small), class: "small_img"), post
				- else
					= link_to (image_tag post.link, class: "small_img"), post
			.post_content
				.title
					%h2= link_to post.title, post
				.data.clearfix
					%p.username
						Shared By
						= post.user.name
					%p.buttons
						%span
							%i.fa.fa-comments-o
							= post.comments.count
						%span
							%i.fa.fa-thumbs-o-up
							= post.get_likes.size						
